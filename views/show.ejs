<%- include ("partials/header"); %>
 <div class="container">
	<div class="row">
		<div class="col-md-3">
			<div class="list-group">
				<li class="list-group-item active">info 1</li>
				<li class="list-group-item">info 2</li>
				<li class="list-group-item">info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			
		
		<div class="thumbnail">
                <img class="img-responsive" src="<%= camp.img %>">
                <div class="caption-full">
					
                    
					 <footer class="blockquote-footer"><%=camp.user.username%> </footer>
                    <h4><a><%=camp.name%></a></h4>
                    <p><%= camp.description %></p>
					
					
					<% if (currentUser){ %>
                    <a class="btn btn-warning" href="update/<%=camp._id%>"> Edit </a>
					<a class="btn btn-danger" href="delete/<%=camp._id%>"> Delete </a>
					<% } %>
					</div>
			
	</div>
			<% if (currentUser){ %>
		<div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/camp/<%= camp._id %>/comments/new">Add New 						Comment</a>
                </div>
			<% } %>

		</div>
			  <% camp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong></strong>
                            <span class="pull-right"> uploaded by  <%=comment.user.username%>   </span>
                            <p>
                                <%= comment.text %> 
                            </p>
							<% if (currentUser){ %>
                    <a class="btn btn-warning" href="update/comment/<%=comment._id%>"> Edit </a>
					<a class="btn btn-danger" href="delete/comment/<%=comment._id%>"> Delete </a>
					<% } %>
                        </div>
                    </div>
                <% }) %>
	</div>
        </div>
<%- include ("partials/footer"); %>